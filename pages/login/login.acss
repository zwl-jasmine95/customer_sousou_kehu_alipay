.a-input{
    padding: 0;
}
page{
    background: #fff;
    position: relative;
    height: 100vh;
}
.content {
    padding: 30% 40rpx 0 40rpx;
}
.content .mobile{
    width: 100%;
    margin: 20rpx 0;
    border-bottom: solid 1rpx #a6a6a6;
}
.content input{
    font-size: 28rpx;
    color: #4e4e4e;
    height: 40px; 
    line-height: 40px;
}
.content .code{
    margin: 20rpx 0;
    border-bottom: solid 1rpx #a6a6a6;
}
.content .code .verify{
    width: 63%; 
}
.content .code .verify-sub{
    border: solid 1rpx #077aff; 
    color: #077aff;
    width: 35%;
    height: 35px; 
    line-height: 35px;
    border-radius: 10rpx;
}
.content .code .verify-sub.sub-disabled{
    border: solid 1rpx #a6a6a6; 
    color: #a6a6a6
}
.content .submit{
    position: absolute;
    left: 20rpx;
    right: 20rpx;
    bottom: 34rpx;
    height: 90rpx;
    line-height: 90rpx;
}